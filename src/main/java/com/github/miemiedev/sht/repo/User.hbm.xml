<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
                 version="2.0">
    <package>com.github.miemiedev.sht.entity</package>

    <named-query name="User.findLikeName">
        <query>select u from User u where u.name like ?1</query>
    </named-query>

    <named-native-query name="User.findNativeLikeName" result-class="com.github.miemiedev.sht.entity.User">
        <query>select * from users u where u.name like ?1</query>
    </named-native-query>


</entity-mappings>